<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/nostrkeyBTN"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:text="NEW KEY PAIR"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.242" />

    <Button
        android:id="@+id/goHome"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:text="HOME"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nostrkeyBTN"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.028">

        <TextView
            android:id="@+id/npubView"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/lavender_border"
            android:gravity="start|center_vertical"
            android:hint="npub"
            android:padding="16dp"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/copyNpub"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@drawable/copy" />


        <ImageView
            android:id="@+id/qrcodeNpub"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@drawable/qrcode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192">

        <TextView
            android:id="@+id/nsecView"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/lavender_border"
            android:gravity="start|center_vertical"
            android:hint="nsec"
            android:padding="16dp"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/copyNsec"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@drawable/copy" />

        <ImageView
            android:id="@+id/qrcodeNsec"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@drawable/qrcode" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
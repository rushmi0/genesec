<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="370dp"
    tools:context="win.notoshi.genesec.viewmodel.fragments.RedeemScriptLockTimeFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="348dp"
        android:layout_height="360dp"
        app:cardCornerRadius="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tap"
                android:layout_width="351dp"
                android:layout_height="61dp"
                android:background="#98A8F8"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="247dp"
                android:layout_height="35dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:text="Contract"
                android:textColor="#FAF7F0"
                android:textSize="30sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/goBackToLockTimeContractPage"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/baseline_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

<!--            ass-->

            <TextView
                android:id="@+id/redeemDesc"
                android:layout_width="300dp"
                android:layout_height="34dp"
                android:layout_marginTop="24dp"
                android:text="Redeem Script"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addrView" />

            <TextView
                android:id="@+id/addrDesc"
                android:layout_width="301dp"
                android:layout_height="34dp"
                android:layout_marginTop="24dp"
                android:text="P2SH for receive"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tap" />

            <!--            android:layout_height="48dp"-->

            <TextView
                android:id="@+id/addrView"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:background="@drawable/block_contract_green"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.185"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addrDesc" />

            <ImageView
                android:id="@+id/copyAddr"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/copygreen"
                app:layout_constraintStart_toEndOf="@+id/addrView"
                app:layout_constraintTop_toBottomOf="@+id/addrDesc" />

            <ImageView
                android:id="@+id/qrcodeAddr"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/qrcodegreeni"
                app:layout_constraintStart_toEndOf="@+id/copyAddr"
                app:layout_constraintTop_toTopOf="@+id/addrView" />

            <TextView
                android:id="@+id/redeemView"
                android:layout_width="297dp"
                android:layout_height="117dp"
                android:background="@drawable/block_contract_green"
                android:gravity="start|center_vertical"
                android:inputType="number"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/redeemDesc" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
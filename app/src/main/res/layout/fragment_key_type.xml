<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A4BDF7"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="win.notoshi.genesec.viewmodel.fragments.KeyTypeFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="348dp"
        android:layout_height="328dp"
        app:cardCornerRadius="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tap"
                android:layout_width="351dp"
                android:layout_height="61dp"
                android:background="#98A8F8"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="277dp"
                android:layout_height="45dp"
                android:layout_marginTop="11dp"
                android:text="Generate Key Pair"
                android:textColor="#FAF7F0"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--            <Button-->
<!--                android:id="@+id/goHome"-->
<!--                android:layout_width="153dp"-->
<!--                android:layout_height="52dp"-->
<!--                android:layout_marginTop="196dp"-->
<!--                android:text="Home"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintHorizontal_bias="0.502"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tap" />-->

            <TextView
                android:id="@+id/goHome"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_marginTop="194dp"
                android:background="@drawable/green_rounded_button"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                android:text="Home"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tap" />

            <ImageView
                android:id="@+id/wifKeyBTN"
                android:layout_width="91dp"
                android:layout_height="90dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tap"
                app:srcCompat="@drawable/smartkey" />

            <TextView
                android:id="@+id/wifKeyDesc"
                android:layout_width="91dp"
                android:layout_height="29dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="WIF Key"
                android:textStyle="normal|bold"
                android:fontFamily="@font/grandstander_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wifKeyBTN" />

            <ImageView
                android:id="@+id/nostrKeyBTN"
                android:layout_width="91dp"
                android:layout_height="92dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tap"
                app:srcCompat="@drawable/nostriii" />

            <TextView
                android:id="@+id/nostrKeyDesc"
                android:layout_width="95dp"
                android:layout_height="29dp"
                android:layout_marginStart="66dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Nostr Key"
                android:textStyle="normal|bold"
                android:fontFamily="@font/grandstander_light"
                app:layout_constraintStart_toEndOf="@+id/wifKeyDesc"
                app:layout_constraintTop_toBottomOf="@+id/nostrKeyBTN" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
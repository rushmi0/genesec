<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A4BDF7"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="win.notoshi.genesec.viewmodel.fragments.MnemonicFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="348dp"
        android:layout_height="370dp"
        app:cardCornerRadius="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tap"
                android:layout_width="351dp"
                android:layout_height="61dp"
                android:background="#98A8F8"
                app:layout_constraintStart_toStartOf="parent" />


            <!-- ################################################### -->

            <!--                      # etc.. #                      -->

            <!-- ################################################### -->


            <TextView
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="39dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                android:text="Secret Word"
                android:textColor="#FAF7F0"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.595"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/closeBTN"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.216"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/word1"
                android:layout_width="290dp"
                android:layout_height="190dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/seed_stroke"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tap" />

            <TextView
                android:id="@+id/seedView"
                android:layout_width="251dp"
                android:layout_height="158dp"
                android:fontFamily="@font/grandstander_light"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/word1"
                app:layout_constraintEnd_toEndOf="@+id/word1"
                app:layout_constraintStart_toStartOf="@+id/word1"
                app:layout_constraintTop_toTopOf="@+id/word1" />


            <TextView
                android:id="@+id/newSeedtBTN"
                android:layout_width="125dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/yellow_rounded_button"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                android:text="New Seed"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word1" />

            <TextView
                android:id="@+id/confirmSeedtBTN"
                android:layout_width="125dp"
                android:layout_height="52dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/green_rounded_button"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                android:text="Confirm"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="129dp"
                android:layout_height="20dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/grandstander_light"
                android:textStyle="normal"
                android:gravity="center"
                android:text="Mnemonic Phrase"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tap" />

            <TextView
                android:id="@+id/amountWord"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                android:text=""
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/tap" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/grandstander_light"
                android:gravity="center"
                android:text="Word"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/amountWord"
                app:layout_constraintTop_toBottomOf="@+id/tap" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="49dp"
                android:layout_height="44dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/tap"
                app:layout_constraintTop_toTopOf="@+id/tap"
                app:srcCompat="@drawable/seed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>